FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     chtMultiRegionFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1000;

deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   20;

purgeWrite      0;

//writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

//maxCo           1.0;

//maxDi           10.0;

adjustTimeStep  yes;

// ************************************************************************* //


functions
{
    probes_coil
    {
        type        probes;
   //     name        coil;
        libs  ("libsampling.so");
        writeControl outputTime;
        writeInterval 1;
        region coil;
        fields ( T );
        probeLocations
        (
          (0.005 -0.036 0.033)//coil
        );
    }
    probes_stator
    {
        type        probes;
     //   name        stator;
        libs  ("libsampling.so");
        writeControl outputTime;
        writeInterval 1;
        region stator;
        fields ( T );
        probeLocations
        (
          (0.005 -0.019 0.044)//stator
        );
    }
    probes_case
    {
        type        probes;
     //   name        case;
        libs  ("libsampling.so");
        writeControl outputTime;
        writeInterval 1;
        region case;
        fields ( T );
        probeLocations
        (
          (0.005  0.048 0.051)//case
        );
    }
           
}
